@using newBugTracker.Models
@model LoginViewModel

@{
    Layout = null;
}

<title>BugTracker</title>

<!-- Bootstrap core CSS -->
<link href="~/CSS/bootstrap.min.css" rel="stylesheet">
<link href="~/CSS/bootstrap-reset.css" rel="stylesheet">

<!--Animation css-->
<link href="~/CSS/animate.css" rel="stylesheet">

<!--Icon-fonts css-->
<link href="~/Assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/Assets/ionicon/css/ionicons.min.css" rel="stylesheet" />
<link href="~/Assets/material-design-iconic-font/css/material-design-iconic-font.min.css" rel="stylesheet" />

<link href="~/Assets/modal-effect/css/component.css" rel="stylesheet">

<!-- Custom styles for this template -->
<link href="~/CSS/style.css" rel="stylesheet">
<link href="~/CSS/helper.css" rel="stylesheet">

<div class="wrapper-page">
    <div class="panel panel-color panel-inverse">
        <div class="panel-heading" style="text-align: center;">
            <a href="@Url.Action("Landing", "Home")"><img src="~/Img/BugTracker_Logo_White.png" style="height:125px;" /></a>
        </div>

        <div class="panel-body">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal m-t-10 p-20 p-b-0" }))
            {
                @Html.AntiForgeryToken()
                <h5>Login</h5>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" placeholder="Email" name="Email">
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="password" placeholder="Password" name="Password">
                    </div>
                </div>

                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-inverse w-md" type="submit">Log In</button>
                    </div>
                </div>

            }
            <div class="form-group m-t-30">
                <div class="col-sm-7">
                    <a href="javascript:;" class="md-trigger" data-modal="modal-16"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a>
                </div>
                <div class="col-sm-5 text-right">
                    @Html.ActionLink("Create Account", "Register")
                </div>
            </div>
        </div>
        <div class="md-modal md-effect-16" id="modal-16">
            <div class="md-content">
                <h3>Forgot Password?</h3>
                <div>
                    <p>Enter your email address and you will recieve a link to reset your password.</p>
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" type="text" placeholder="Email" name="Email">
                            </div>
                        </div>

                        <div class="form-group text-right">
                            <div class="col-xs-12">
                                <button class="btn btn-inverse w-md" type="submit">Send Email</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="md-overlay"></div><!-- the overlay element -->
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/JS/jquery.js"></script>
    <script src="~/JS/bootstrap.min.js"></script>
    <script src="~/JS/pace.min.js"></script>
    <script src="~/JS/wow.min.js"></script>
    <script src="~/JS/jquery.nicescroll.js" type="text/javascript"></script>

    <!-- Modal-Effect -->
    <script src="~/Assets/modal-effect/js/classie.js"></script>
    <script src="~/Assets/modal-effect/js/modalEffects.js"></script>

    <!--common script for all pages-->
    <script src="~/JS/jquery.app.js"></script>
