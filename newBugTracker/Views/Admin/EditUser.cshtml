@model newBugTracker.Models.AdminUserViewModel

<h2>@Model.User.FullName's Role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.User.Id)

    <div class="col-md-6">
        @Html.DropDownList("SelectedRoles", Model.Roles, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="col-md-10" style="padding-top: 20px;">
            <input type="submit" class="btn btn-inverse m-b-5">
        </div>
    </div>
}
