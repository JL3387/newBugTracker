@model newBugTracker.Models.DashboardVM

@{
    ViewBag.Title = "SubDashboard";
}

<h3 class="text-center">Submitter Dashboard</h3>

<div class="vertical-center">
    <div class="col-md-6">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Recent Tickets You Submitted</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Created</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Tickets)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Created</td>
                                        <td>@Html.ActionLink("Details", "Details", "Tickets", new { id = item.Id }, new { @class = "btn btn-inverse btn-xs m-b-5" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Projects You're On</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Projects</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Projects)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@Html.ActionLink("Details", "Details", "Projects", new { id = item.Id }, new { @class = "btn btn-inverse btn-xs m-b-5" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>