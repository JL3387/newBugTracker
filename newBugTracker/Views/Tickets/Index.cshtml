@model IEnumerable<newBugTracker.Models.Ticket>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">All Tickets</h3>
            </div>
            <div class="panel-body">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap dataTable " cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Title")</th>
                            <th>@Html.DisplayName("Description")</th>
                            <th>@Html.DisplayName("Assigned To")</th>
                            <th>@Html.DisplayName("Created By")</th>
                            <th>@Html.DisplayName("Project")</th>
                            <th>@Html.DisplayName("Priority")</th>
                            <th>@Html.DisplayName("Status")</th>
                            <th>@Html.DisplayName("Type")</th>
                            <th>@Html.DisplayName("Created")</th>
                            <th></th>
                        </tr>
                    </thead>
                    @*<tfoot>
                            <tr>
                                <th>@Html.DisplayName("Title")</th>
                                <th>@Html.DisplayName("Description")</th>
                                <th>@Html.DisplayName("AssignedToUser")</th>
                                <th>@Html.DisplayName("Created By")</th>
                                <th>@Html.DisplayName("Project")</th>
                                <th>@Html.DisplayName("TicketPriority")</th>
                                <th>@Html.DisplayName("TicketStatus")</th>
                                <th>@Html.DisplayName("TicketType")</th>
                                <th>@Html.DisplayName("Created")</th>
                                <th>@Html.DisplayName("Updated")</th>
                                <th></th>
                            </tr>
                        </tfoot>*@
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.OwnerUser.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Project.Name)</td>
                                <td>
                                    @if (item.TicketPriorityId == 1)
                                    {
                                        <span class="label label-warning">
                                            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                        </span>
                                    }
                                    @if (item.TicketPriorityId == 2)
                                    {
                                        <span class="label label-success">
                                            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                        </span>
                                    }
                                    @if (item.TicketPriorityId == 3)
                                    {
                                        <span class="label label-primary">
                                            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                        </span>
                                    }
                                    @if (item.TicketPriorityId == 4)
                                    {
                                        <span class="label label-danger">
                                            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (item.TicketStatusId == 1)
                                    {
                                        <span class="label" style="background-color: slategray">
                                            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                        </span>
                                    }
                                    @if (item.TicketStatusId == 2)
                                    {
                                        <span class="label label-info">
                                            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                        </span>
                                    }
                                    @if (item.TicketStatusId == 3)
                                    {
                                        <span class="label label-success">
                                            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                        </span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.TicketType.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                                <td>
                                    <span>
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-inverse btn-xs m-b-5" })
                                    </span>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-inverse btn-xs m-b-5" })
                                        </span>
                                        <span>
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-inverse btn-xs m-b-5" })
                                        </span>


                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div> <!-- End Row -->

<p>
    <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Back" class="btn btn-inverse btn-sm m-b-5" />
</p>

